<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ulargui.healthylinkxcordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Healthylinkx</name>
    <description>
        A migration of the Healthylinkx web app to experiment with cordova.
    </description>
    <author email="mauricio@ulargui.com" href="http://www.ulargui.com">
        Mauricio Ulargui
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
	<plugin name="org.apache.cordova.core.geolocation" />
	<access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>


